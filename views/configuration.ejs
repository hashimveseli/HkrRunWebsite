<!doctype html>
<html lang="sv">
    <head>
        <meta charset="utf-8">
        <title>HKR Run</title>
        <link rel="stylesheet" href="css/style.css">
        <link rel="icon" href="favicon.ico">
    </head>

    <body>

        <div class="header">
            <h1>HKR Run Configuration</h1>
            <p>Change your personal settings.</p>
        </div>

        <div class="topnav">
            <a href="home">Home</a>
            <a href="history">History</a>
            <a href="about">About</a>
            <a href="admin">Admin</a>
            <a href="configuration"><img  width="14" src="img/configuration.jpg"></a>
            <a href="logout">Logout</a>
        </div>

        <div class="login-form">
            <h1>Change Password Form</h1>
            <form action="/password" method="POST">
              <input type="password" name="oldPassword" placeholder="Old password" required>
              <input type="password" name="newPassword" placeholder="New password" required>
              <button>Submit</button>
            </form>  
          <%= passwordChangeStatus %>
        </div>

        <div class="login-form">
            <h1>Change Email Form</h1>
            <form action="/email" method="POST">
              <input type="text" name="oldEmail" placeholder="Old email" required>
              <input type="text" name="newEmail" placeholder="New email" required>
              <button>Submit</button>
            </form>  
          <%= emailChangeStatus %>
        </div>

        <script type="text/javascript" src="js/main.js"></script>

    </body>
</html>
