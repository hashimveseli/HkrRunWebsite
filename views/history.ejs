<!doctype html>
<html lang="sv">
<head>
    <meta charset="utf-8">
    <title>HKR Run</title>
    <link rel="stylesheet" href="css/style.css">
    <link rel="icon" href="favicon.ico">
</head>

<% var workoutList = workouts; %>

<body>

  <div class="header">
    <h1>HKR Run</h1>
    <p>View your HKR runs!</p>
  </div>

  <ul class="topnav">
    <li><a href="home">Home</a></li>
    <li><a href="history">History</a></li>
    <li><a href="about">About</a></li>
    <li><a href="admin">Admin</a></li>
    <li style="float:right"><a href="configuration"><img  width="14" src="img/configuration.jpg"></a></li>
    <li style="float:right"><a href="logout">Logout</a></li>
  </ul>



  <article>

    <h1>Past runs</h1>

    <canvas id="workoutChart"></canvas>
    <div>
      <button onclick="displayDistanceGraph(<%= JSON.stringify(workoutList) %>)">Distance</button>
      <button onclick="displayStepsGraph(<%= JSON.stringify(workoutList) %>)">Steps</button>
      <button onclick="displayTimeGraph(<%= JSON.stringify(workoutList) %>)">Time</button>
    </div>

    <div>
      <table class="workoutTable" id="workoutTable">
        <tr>
          <th>ID</th>
          <th>Distance</th>
        </tr> 
        <% if(workoutList != undefined){ %>
        <% for(var i = 0; i < workoutList.length; i++){ %>
          <tr onclick="displayWorkout(<%= JSON.stringify(workoutList[i]) %>)" >
            <td><%= workoutList[i].workoutId %></td>
            <td><%= workoutList[i].distance %></td>
          </tr>
        <% } }%>
      
      </table>
      <div id="displayWorkout">

      </div>
    </div>

  </article>
  <script type="text/javascript" src="js/workout.js"></script>
  <script src="/scripts/Chart.js"></script>
  <script type="text/javascript" src="js/chart.js"></script>
  

</body>
</html>
